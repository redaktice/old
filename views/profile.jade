extends layout

block content
	div.main-body
		div.container

			//- Navigation
			nav.navbar.navbar-default
				div.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#collapse-section")
						span.icon-bar
						span.icon-bar
						span.icon-bar
				a.navbar-brand(href="#")
					h3 My Media
				div#collapse-section.collapse.navbar-collapse
					div.centering
						ul.nav.navbar-nav.inline-block.centered
							li: i.icon.facebok.media-circle-md.fa.fa-facebook
							li: i.icon.twitter.media-circle-md.fa.fa-twitter
							li: i.icon.instagram.media-circle-md.fa.fa-instagram
							li
								button.icon.icon-btn.btn-default.btn-circle
									h1: i.fa.fa-plus-circle
						ul.nav.navbar-nav.navbar-right
							li.dropdown
								a.dropdown-toggle(href="#", data-toggle="dropdown")
								h3.inline-block
									i.fa.fa-cog.fa-spin
									span.caret
								ul.dropdown-menu(role="menu")
									li: a(href="#") Settings
									li: a(href="#") Privacy
									li.divider Privacy
									li: a(href="#") Log Out

			//- Profile
			div.container.profile
				div.user
					img.user-img.img-circle(src='#{user.picture}')
					div.user-info
						h2
							span.user-firstName #{user.firstName}
							small.user-lastName #{user.lastName}
						h3.user-age Age
						div.progress
							div.progress-bar(role="progressbar", aria-valuenow-"2", aria-valuemin="0", aria-valuemax="30%", style="width: 20%") Facebook
							div.progress-bar(role="progressbar", aria-valuenow-"2", aria-valuemin="0", aria-valuemax="30%", style="width: 20%") Twitter
							div.progress-bar(role="progressbar", aria-valuenow-"2", aria-valuemin="0", aria-valuemax="30%", style="width: 20%") Instagram
							p.text-center Media Presence

			//- Feed
			div.container.text-center
				h2
					strong The Vibe
						i.icon.icon-btn.fa.fa-compass.fa-spin
				div#feed-head.media.inline-block
					ul.list-unstyled.list-inline
						li
							button#btn-all.icon.icon-btn.btn-circle.highlight
								h2.inline-block.no-mgn
									i.fa.fa-tachometer
						li: i.icon-btn.media-filter.facebook.media-circle-md.fa.fa-facebook
						li: i.icon-btn.media-filter.twitter.media-circle-md.fa.fa-twitter
						li: i.icon-btn.media-filter.instagram.media-circle-md.fa.fa-instagram
			div#feed.box-center
				//- Posts Go Here



			//- Post Template
			div#template.post.template-post.centering
				div.col.post-head
					div.col-sm-4.col-xs-12.inline-block.post-icons
						ul.list-unstyled.list-inline.media-list
							li#icon-template.template
								i.icon.media-circle-xs.fa
							li.btn-group.dropup.minus-media-xs
								h4.btn.dropdown-toggle(data-toggle="dropdown")
									span.icon.inline-block.no-mgn
										i.fa.fa-minus-circle
								//- Remove Icons
								div.dropdown-menu.relative(role="menu")
									div.media.inline-block
										ul.list-unstyled.list-inline.text-right.alter-media-list
											//- Media already vibed goes here
											li: button.re-vibe.btn.btn-success.btn-circle-xs(type="button")
							li.btn-group.dropup.add-media-xs
								h4.btn.dropdown-toggle(data-toggle="dropdown")
									span.icon.inline-block.no-mgn
										i.fa.fa-plus-circle
								//- Add Icons
								div.dropdown-menu.relative(role="menu")
									div.media.inline-block
										ul.list-unstyled.list-inline.alter-media-list
											//- Media NOT vibed goes here
											li: button.re-vibe.btn.btn-success.btn-circle-xs(type="button") V
					div.col-sm-4.col-xs-12
						span
							img.img-circle.img-post-user(src="http://placehold.it/40x40")
							span.post-author ME
					div.col-sm-4.col-xs-12.date.inline-block Date
				//- Main Post Content
				div.post-content
					p.post-text This is a post.  Lorem ipsum dolor sit amet, consectetur adipisicing elit. Provident eaque optio nihil, sequi magnam rem dolorem repellendus, sunt sint eveniet sed ullam quidem recusandae atque repellat dolores aperiam voluptas. Perferendis.
				div.page-header
				h5 Tags
			//- Template?
			li#add-media-template.template: i.to-media.media-circle-xs.fa
			
			//- Friends
			aside
				div.box-side-right.inline-block
					div.btn-group.dropup
						button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
							h3.inline-block.no-mgn
								h2.no-mgn.inline-block
									i.fa.fa-group
								span.caret
						ul.friends.dropdown-menu(role="menu")
							li
								img.img-circle(src="http://placehold.it/40x40")
								p Darth Vader
							li
								img.img-circle(src="http://placehold.it/40x40")
								p Friend 2
							li
								img.img-circle(src="http://placehold.it/40x40")
								p Friend 3

			//- Create New Post
			aside
				div.box-side-left.inline-block

					//- Popup
					div.btn-group.dropup
						button#btn-post.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")
							h4.inline-block.no-mgn Post
								span.caret
						div#post-menu.dropdown-menu(role="menu")
							form.post-form(action="form")
								div.form-group
									textarea#new-post(name="post", cols="30", rows="5", placeholder="Share your thoughts")
									textarea#tag-post(name="", cols="30", rows="2", placeholder="#It")
								h2.no-mgn: i.btn.fa.fa-camera
								div.page-header.no-mgn
								//- Share icons
								div.media.inline-block
									ul.list-unstyled.list-inline
										li: h3 ALL
										li: i.to-media.media-circle-md.fa.fa-facebook.facebook
										li: i.to-media.media-circle-md.fa.fa-twitter.twitter
										li: i.to-media.media-circle-md.fa.fa-instagram.instagram
								//- Submit
								div.form-group
									button.btn.btn-success.vibe(type="button") Vibe

			//- Footer
			footer.text-center
				div.page-header
				ul.list-inline
					li: a(href="#") About Us
					li: a(href="#") Contact Us
					li: a(href="#") FAQ
					li: a(href="#") Terms of use
				p Â© Company




		script.
			var key = #{key}





